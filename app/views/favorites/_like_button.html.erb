<% unless current_user.id == micropost.user_id %>
  <% if current_user.liking?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost: micropost), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
